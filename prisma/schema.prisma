
generator client {
  provider   = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Order {
  id              String   @id @default(uuid())
  displayId       Int      @default(0)

  // Lifecycle state (string-based for SQLite)
  status          String   @default("NEW") 
  paymentMethod   String   @default("PREPAID")
  isPaid          Boolean  @default(false)
  source          String   @default("REGISTER")

  totalPrice      Float

  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  
  // Time tracking fields
  ovenEnteredAt    DateTime?
  actualReadyAt    DateTime?
  estimatedReadyAt DateTime?

  // Customer snapshot
  customerName    String?
  customerPhone   String?
  customerType    String   @default("PICKUP")
  customerAddress String?
  isWalkIn        Boolean  @default(false)

  // Staff assignment (by employee id or name for now)
  assignedTo      String?
  
  // Special instructions
  specialInstructions String?

  // Relations
  items           OrderItem[]
  notifications   Notification[]

  // Soft-cancel support
  cancelledAt     DateTime?
}

model OrderItem {
  id        String   @id @default(uuid())
  orderId   String
  order     Order    @relation(fields: [orderId], references: [id], onDelete: Cascade)

  name      String
  size      String?
  crust     String?
  price     Float
  quantity  Int      @default(1)
  notes     String?
  toppings  String   @default("[]")
}

model Notification {
  id        String   @id @default(uuid())
  type      String
  message   String
  orderId   String?
  order     Order?   @relation(fields: [orderId], references: [id])
  isRead    Boolean  @default(false)
  createdAt DateTime @default(now())
}

model Warning {
  id               String   @id @default(uuid())
  reason           String
  isActive         Boolean  @default(true)
  createdBy        String
  createdAt        DateTime @default(now())

  targetPhone      String?
  targetName       String?
  targetPaymentId  String?
}

model AdminAction {
  id               String   @id @default(uuid())
  actionType       String
  targetEntityType String
  targetEntityId   String
  payload          String
  performedBy      String
  performedAt      DateTime @default(now())
}

model Employee {
  id        String   @id @default(uuid())
  name      String
  role      String    // FRONT_COUNTER | CHEF | COOK | FLOAT
  isOnDuty  Boolean   @default(true)
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}
